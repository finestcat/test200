<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Inventory System - Home</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
    <style>
    .username {
      text-align: left;
      color: #555;
      margin-bottom: 20px;
    }
     .body {
      background-color: #f8f9fa;
    }
    </style>
    
    <body>
	 <div class="container-fluid" style="background-color: #C0C0C0">
         	<div class="row">
      		   <div class="col-md-6">
        		<h1>Inventory System</h1>
        		<h1 class="username">Hello <%= name%></h1>
            <a href="/create" class="btn btn-outline-primary" role="button" style="background-color: rgb(26, 0, 118);">Create</a>
            <a href="/logout" class="btn btn-outline-primary float-end" role="button" style="background-color: rgb(26, 0, 118);">Logout</a>
            <div>
              <table id="inv_table" class="table table-sm">
                  <thead><tr class ="table=primary" ><th>Here Is Your Inventory</tr></th></thead>
                  <thead>
                          <tr class="table-info">
                            <th scope="col">Name</th>
                             <th scope="col">ID</th>
                             <th scope="col">Type</th>
                             <th scope="col">Quantity</th>
                             <th scope="col">Update</th>
                             <th scope="col">Delete</th>
                          </tr>
                  </thead>
                  <tbody>
                    <% dataSet.forEach((item) => { %>
                      <tr class="table-primary">
                          <td><%= item.inv_name %></td>
                          <td><%= item.inv_id %></td>
                          <td>Type: <%= item.inv_type %></td>
                          <td><%= item.quantity%></td>                          
                            <td><a href="/update?_id=<%= item._id %>" class="btn btn-outline-primary" role="button">Update</td>
                            <td><a href="/delete?_id=<%= item._id %>" class="btn btn-outline-primary" role="button">Delete</td>       
                      </tr>
                        <input type="hidden" name="id" value="<%= item._id %>">
                      <%} )%>
                  </tbody>